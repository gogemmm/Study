@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script>
        // 页面加载完成时执行的函数
        window.onload = function() {
            // 检查是否有错误消息存在
            var errorMessage = "@TempData["ErrorMessage"]";
            if (errorMessage) {
                // 弹出提示框显示错误消息
                alert(errorMessage);
            }
        };
    </script>
    <style type="text/css">
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            text-align: center;
            font-family: "楷体", "楷体_GB2312", "KaiTi", serif;
        }

        form {
            width: 400px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input {
            width: 98%;
            height: 33px;
            margin-bottom: 10px;
        }

        select, button {
            width: 100%;
            height: 40px;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <form name="login" method="post">
        <h1>学生选课系统</h1>
        <input type="text" name="UserName" placeholder="用户名" />
        <input type="text" name="PassWord" placeholder="密码" />
        <select name="Role">
            <option value="" disabled selected hidden>请选择登录角色</option>
            <option value="Student">学生</option>
            <option value="Teacher">教师</option>
            <option value="Admin">管理员</option>
        </select>
        <button type="submit">登录</button>
    </form>
</body>
</html>
    